<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
             <div class="panel-image hide-panel-body">
                 <img src="/banner.jpg" class="panel-image-preview">
             </div>
             <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-2">
                        <img src="/logo.png" height="50px" width="50px" class="rounded-img home-avatar">
                    </div>
                    <div class="col-sm-10">
                        <h4 style="text-align: center;"><%= current_user.username %></h4>
                    </div>
                    <div class="col-sm-12" style="margin-top: 5px">
                        <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">
                          TWEETS<br>
                          <h6 style="color: blue; font-size: 200%;">16</h6>
                        </div>
                        <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">
                          FOLLOWERS<br>
                          <h6 style="color: blue; font-size: 200%;">12</h6>
                        </div>
                       
                    </div>
                </div>
             </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <h5 style="color: grey; font-size: 125%;">Trends</h5>
              <a href="">#Trend 1</a><br>
                <span style="color: grey;">21k Posts</span><br><br>
              <a href="">#Trend 2</a><br>
                <span style="color: grey;">26k Posts</span><br><br>
              <a href="">#Trend 3</a><br>
                <span style="color: grey;">28k Posts</span><br><br>
              <a href="">#Trend 4</a><br>
                <span style="color: grey;">37k Posts</span><br><br>
              <a href="">#Trend 5</a><br>
                <span style="color: grey;">8k Posts</span><br><br>
          </div>
        </div>
    </div>
    <div class="col-xs-6">
      <%= render "/components/post_form" %><br><br>
      
      <% for @p in @posts %>
      <div class="panel panel-default post-panel">
          <div class="panel-body row">
            
              <div class="col-sm-1">
                <img class="rounded-img" src="/logo.png" height="50px" width="50px">
              </div>
              <div class="col-sm-11">
                <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
                <P class=" post-content"><%= @p.content %></P>
              </div>
              <div class="col-sm-12">
                <p class="post-links">
                  <span class="glyphicon glyphicon-share g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-thumbs-up g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                  <a href="">View Conversation</a>
                  
                </p>
              </div>
          </div>
    </div>
      <% end %>
      
   
      <div class="panel panel-default post-panel">
          <div class="panel-body row">
              <div class="col-sm-12">
                <center>
                  <img src="/logo.png" height="25px" width="25px"></img>
                  <a href="#top"><p class="opacity: .7;">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a>
                </center>
            </div>
        </div>
    </div>
  </div>
      
  <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <p style="opacity: .5; font-size: 90%;">About  Help  Blog  Status  Jobs  Terms  Privacy  Cookies  Ads  Info  Brand  Advertise  Business Media Developers  Directory @ 2016 Echo4 Development</p>
          </div>
        </div>
  </div>
</div> <!-- End Row -->




