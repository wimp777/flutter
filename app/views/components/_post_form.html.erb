
  <div class="panel panel-default post-panel">
          <div class="panel-body row">
            
              <div class="col-sm-1">
                <img class="rounded-img" src="/logo.png" height="50px" width="50px">
              </div>
              <div class="col-sm-11">
                  <%= form_for(@newPost) do |f| %>
                  <center>
                    <div class="field" style="margin-left: 10px;">
                        <%= f.text_field :content, autofocus: true, class: "form-control" %><%= f.submit "Add Post" %>
                    </div>
                  </center>
                  <% end %>
              </div>
          </div>
  </div>


